---
layout:
title: Elm RSS Feed
---
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <description>Musings on Elm from Philip Poots</description>
    <title>CrossingTheRuby.com</title>
    <link>http://{{ site.production_url }}</link>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <ttl>1800</ttl>

    {% for post in site.posts %}
      {% assign planet = false %}
      {% for t in post.tags %}
        {% if t == 'Elm' %}
          {% assign planet = true %}
        {% endif %}
      {% endfor %}

      {% if planet == true %}
      <item>
        <title>{{ post.title }}</title>
        <description>
          {{ post.excerpt | xml_escape }}
          &lt;p&gt;&lt;a href=&quot;http://{{ site.production_url }}{{ post.url }}&quot;&gt;Continue readingâ€¦&lt;/a&gt;&lt;/p&gt;
        </description>
        <link>http://{{ site.production_url }}{{ post.url }}</link>
        <guid>http://{{ site.production_url }}{{ post.id }}</guid>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      </item>
      {% endif %}
    {% endfor %}

  </channel>
</rss>
